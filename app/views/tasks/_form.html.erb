<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :タスク内容 %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :対応期限 %>
    <%= form.date_select :task_limit_on %>
  </div>

  <div class="field">
    <%= form.label :ステータス %>
    <%= form.number_field :task_status %>
  </div>

  <div class="actions">
    <%= form.submit "登録" %>
  </div>
<% end %>
