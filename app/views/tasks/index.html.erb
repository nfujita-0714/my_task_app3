<h1>タスク一覧</h1>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>


<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>課題内容</th>
      <th>終了期限</th>
      <th>登録日時</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td class="task_row"><%= task.content %></td>
        <td class="task_row"><%= task.limit_on %></td>
        <td class="task_row"><%= task.created_at %></td>
        <td class="task_row"><%= task.status %></td>
        <td><%= link_to '詳細画面へ', task %></td>
        <td><%= link_to '編集画面へ', edit_task_path(task) %></td>
        <td><%= link_to '削除画面へ', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

