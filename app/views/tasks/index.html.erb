<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>課題内容</th>
      <th>対応期限</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.task_limit_on %></td>
        <td><%= task.task_status %></td>
        <td><%= link_to '詳細画面へ', task %></td>
        <td><%= link_to '編集画面へ', edit_task_path(task) %></td>
        <td><%= link_to '削除画面へ', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

