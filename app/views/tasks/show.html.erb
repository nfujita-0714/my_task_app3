<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>タスク内容:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>対応期限:</strong>
  <%= @task.limit_on %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>優先度:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>ラベル:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %>
</p>

<p>
  <strong>作成者：</strong>
  <%= @task.user.name %>
</p>

<%= link_to '編集する', edit_task_path(@task) %> |
<%= link_to '一覧に戻る', tasks_path %>
